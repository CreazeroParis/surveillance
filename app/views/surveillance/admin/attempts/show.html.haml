.attempt
  %h2.title
    Questionnaire
    = attempt.survey.title
  .pull-right.date
    RÃ©pondu le
    = l(attempt.created_at)

  - attempt.survey.sections.each_with_index do |section, index|
    %h3
      = section.title

    - section.questions.each do |question|
      .survey-answer{ class: ("not-answered" if index > attempt.last_answered_section) }
        = survey_answer_for(attempt, question)


= link_to "Retour", admin_survey_attempts_path(attempt.survey), class: "btn btn-default"
