  - randomize = question.field.settings.randomize
  .form-group
    .controls
      %label.checkbox
        = fr.check_box :value
        = randomize.admin_label

    = fr.hidden_field :key, value: :randomize
    = fr.hidden_field :id, value: fr.object.id if fr.object.persisted?
